function sendEmailWithTemplate(recipientEmail, recipientName) {
  var emailTemplate = `
    <html>
      <body>
        <p>Hello, ${recipientName}</p>
        <p>This is a sample email template.</p>
      </body>
    </html>
  `;

  GmailApp.sendEmail({
    to: recipientEmail,
    subject: 'Your Subject Here',
    body: 'This is the plain text version of the email.',
    htmlBody: emailTemplate,
  });
}
function sendSampleEmail() {
  var recipientEmail = 'dyukhymchuk@rcit.ukr.education';
  var recipientName = 'John Doe';
  sendEmailWithTemplate(recipientEmail, recipientName);
}
